<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="8dp"
        android:background="@color/menu_text">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:context="com.nanodegree.alse.movieguide.DetailActivityFragment"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/detail_fragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:typeface="normal"
                android:id="@+id/detail_release_date"
                android:fontFamily="sans-serif"
                android:paddingTop="18dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/movie_dark_grey"
                android:freezesText="true"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_ratingBar"
                android:layout_gravity="center_horizontal"
                android:isIndicator="true"
                android:stepSize=".11"
                android:numStars="5"
                android:rating="3.65"
                android:mirrorForRtl="false"
                android:theme="@style/RatingBar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Large Text"
                android:id="@+id/detail_overview"
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:textColor="@color/movie_dark_grey"
                android:outlineProvider="background"
                android:fontFamily="sans-serif-medium"/>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10dp"
                app:cardCornerRadius="18dp"
                android:layout_marginTop="8dp"
                android:background="@color/menu_text">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Large Text"
                android:id="@+id/detail_overview1"
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:textColor="@color/movie_dark_grey"
                android:outlineProvider="background"
                android:fontFamily="sans-serif-medium"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>


